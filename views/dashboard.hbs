{{> maindisplay}}

<div class="col-md-9 main">
    <div class="row">
        <div class="col-md-4">
            <h1 class="col-head">tasks</h1>
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><input type="checkbox" value="complete" class="check"></input>a task
                        name</li>

                    {{#each task}}
                    <li class="list-group-item"><input type="checkbox" value="complete" class="check"></input>a task
                        name</li>
                    {{/each}}
                    <li class="add list-group-item"> <a href="/addtask"><button class="col-12 btn btn-info btn-lg btn-block my-1">ADD
                                A TASK</button></a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <h1 class="col-head">routines</h1>
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    {{#each routine}}
                    <li class="list-group-item"><input type="checkbox" value="complete" class="check"></input>a routine
                        name</li>
                    {{/each}}
                    <li class="add list-group-item"> <a href="/addroutine"><button class="col-12 btn btn-success btn-lg btn-block my-1">ADD
                                A ROUTINE</button></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <h1 class="col-head">completed quests</h1>
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    {{#each completed-item}}
                    <li class="list-group-item">Cras justo odio</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
