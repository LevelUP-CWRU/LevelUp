{{> header }}
<div class="container">
<div class="col-md-6 mx-auto">
    
<h1 class="text-center">{{title}}</h1>

<div class="col mx-1 my-1">
            <hr style="width:75%">
            <form method="POST" action="/login">
                <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                </div>
                </div>
                <div class="form-group row">
                <label for="password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                </div>
                
                <div class="form-group m-0">
                    <button type="submit" class="col-12 btn btn-primary btn-lg btn-block my-1">LOGIN</button>
                </div>
            </form>
            <a href="/"><button class="col-12 btn btn-danger btn-lg btn-block my-1">CANCEL</button></a>
            <a href="/register"><button class="col-12 btn btn-secondary btn-lg btn-block my-1">NOT A USER? REGISTER HERE</button></a>
        </div>
</div>
</div>

{{> footer-end }}