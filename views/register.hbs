
{{> header }}
<div class="container">
<div class="col-md-6 mx-auto">
    
<h1 class="text-center">{{title}}</h1>

<div class="col mx-1 my-1">
            <hr style="width:75%">
            <form method="POST" action="/register">
                <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                </div>
                </div>
                <div class="form-group row">
                <label for="password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    <small id="passwordHelpBlock" class="form-text text-muted">
                        Your password must be ...
                    </small>
                </div>
                </div>
                <div class="form-group row">
                <label for="passwordMatch" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="passwordMatch" name="passwordMatch" placeholder="Retype Password">
                </div>
                </div>
                <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-2 pt-0">Avatar</legend>
                    <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="avatarRadios" id="inputMale" value="1" checked>
                        <label class="form-check-label" for="inputMale">
                        Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="avatarRadios" id="inputFemale" value="2">
                        <label class="form-check-label" for="inputFemale">
                        Female
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="avatarRadios" id="inputNonBinary" value="3">
                        <label class="form-check-label" for="inputNonBinary">
                        Non-Binary
                        </label>
                    </div>
                    </div>
                </div>
                </fieldset>
                <div class="form-group m-0">
                    <button type="submit" class="col-12 btn btn-primary btn-lg btn-block my-1">CREATE USER</button>
                </div>
            </form>
            <a href="/"><button class="col-12 btn btn-danger btn-lg btn-block my-1">CANCEL</button></a>
        </div>
</div>
</div>

{{> footer-end }}